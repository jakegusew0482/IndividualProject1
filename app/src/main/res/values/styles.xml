<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextStyle">@style/EditTextStyle1</item> <!--Set the edittext style for default theme to my edit text style -->
        <item name="editTextStyle">@style/EditTextStyle1</item>
        <item name="android:buttonStyle">@style/ButtonStyle1</item> <!--Set the button style for default theme to my button style -->
        <item name="buttonStyle">@style/ButtonStyle1</item>
    </style>


    <style name="EditTextStyle1" parent="@android:style/Widget.EditText"> <!-- custom edittext style. Saves a lot of XML code in layouts-->
        <item name="android:background">@color/TextFieldBlue</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ButtonStyle1" parent="@android:style/Widget.Button"> <!-- Custom button style. -->
        <item name="android:background">@color/TextFieldBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="splash" parent="Theme.AppCompat.Light.DarkActionBar"> <!-- Style for the splash screen, sets the bakcground to the drawable resource -->
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
</resources>